.item-wrap {
  position: relative;
}

.item-wrap .item {
  position: absolute;
  width: 100%;
  z-index: 1;
}

.item-wrap .item.itemTransition {
  transition: transform 0.3s !important;
}

.item-wrap .item.zIndex {
  z-index: 2;
}

.item-wrap .item.cur {
  transition: initial;
}

.item-wrap .item.fixed {
  z-index: 0 !important;
}

.info {
  position: relative;
  padding-top: 100%;
  background: #FFF;
}

.info__item {
  position: absolute;
  border: 1rpx solid #EBEDF0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}

.info__item .image {
  width: 100%;
  height: 100%;
}

.cell {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #EBEDF0;
  background: #FFF;
}

.cell__hd {
  font-size: 0;
}

.cell__hd .image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}

.cell__bd {
  flex: 1;
}

.cell__bd .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.cell__bd .des {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666;
  font-size: 24rpx;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF;
  padding: 32px;
  padding-left: 0;
  position: relative;
  vertical-align: middle;
  border-bottom: solid 2px #EFEFF4;
}

.category-item.child {
  padding: 24px 32px;
}

.category-item.has-delete {
  transform: translateX(-88px);
  border-radius: 0;
}

.category-item .delete-icon {
  width: 40px;
  height: 40px;
  margin-left: 24px;
}

.category-item .category-title {
  flex-grow: 1;
  margin-right: 24px;
  font-size: 32px;
  color: #2D2A29;
}

.category-item .category-title.border {
  border-right: 1px solid #E8E8E8;
}

.category-item .op-edit {
  font-size: 28px;
  font-weight: 400;
  color: #CF001C;
  cursor: pointer;
  margin-left: 32px;
}

.category-item .right-icon {
  width: 44px;
  height: 44px;
  margin-left: 32px;
  cursor: pointer;
}

.category-item .delete-btn {
  background-color: #FF3B4D;
  position: absolute;
  color: #FFF;
  right: -120px;
  width: 120px;
  font-size: 28px;
  top: 0;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 32px;
}

.category-item .category-icon {
  width: 80px;
  height: 80px;
  border-radius: 40%;
  margin-right: 24px;
}
